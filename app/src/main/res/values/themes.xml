<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyNASAApp" parent="Theme.MaterialComponents.NoActionBar">
        <item name="themeColorPrimary">@color/anthracite_light</item>
        <item name="themeColorPrimaryVariant">@color/anthracite_dark</item>
        <item name="themeColorOnPrimary">@color/gray_green</item>

        <item name="themeColorSecondary">@color/pink_dark</item>
        <item name="themeColorSecondaryVariant">@color/pink_light</item>
        <item name="themeColorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" >?attr/themeColorPrimaryVariant</item>
        <item name="android:navigationBarColor" >?attr/themeColorPrimaryVariant</item>
        <item name="android:colorBackground" >?attr/themeColorPrimaryVariant</item>

        <item name="themeColorError">@color/red_dark</item>
        <item name="themeColorSurface">@color/anthracite_light</item>

    </style>

    <style name="Theme.MyNASAAppDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="themeColorPrimary">@color/indigo_light</item>
        <item name="themeColorPrimaryVariant">@color/indigo_dark</item>
        <item name="themeColorOnPrimary">@color/blue_light</item>

        <item name="themeColorSecondary">@color/pink_light</item>
        <item name="themeColorSecondaryVariant">@color/pink_dark</item>
        <item name="themeColorOnSecondary">@color/blue_light</item>

        <item name="android:statusBarColor" >?attr/themeColorPrimaryVariant</item>
        <item name="android:navigationBarColor" >?attr/themeColorPrimaryVariant</item>
        <item name="android:colorBackground" >?attr/themeColorPrimaryVariant</item>

        <item name="themeColorError">@color/red_dark</item>
        <item name="themeColorSurface">@color/anthracite_light</item>
    </style>
</resources>